<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pt_assistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="Android JUnit TestCase"
        android:targetPackage="com.example.pt_assistant" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="com.example.pt_assistant.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pt_assistant.GetPatientActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.example.pt_assistant.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.MainActivity" />
        </activity>
        <activity
            android:name="com.example.pt_assistant.CreatePatientActivity"
            android:label="@string/title_record_created_activity"
            android:parentActivityName="com.example.pt_assistant.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.MainActivity" />
        </activity>
        <activity
            android:name="com.example.pt_assistant.PatientListActivity"
            android:label="@string/pattient_list"
            android:parentActivityName="com.example.pt_assistant.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.MainActivity" />
        </activity>

        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.example.pt_assistant.TrendReportActivity"
            android:label="@string/title_activity_trend_report" >
        </activity>
        <activity
            android:name="com.example.pt_assistant.CreateNotesActivity"
            android:label="@string/title_activity_create_notes"
            android:parentActivityName="com.example.pt_assistant.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.MainActivity" />
        </activity>
        <activity
            android:name="com.example.pt_assistant.SubjectiveNotesActivity"
            android:label="@string/title_activity_subjective_notes"
            android:parentActivityName="com.example.pt_assistant.CreateNotesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.CreateNotesActivity" />
        </activity>
        <activity
            android:name="com.example.pt_assistant.ObjectiveNotesActivity"
            android:label="@string/title_activity_objective_notes"
            android:parentActivityName="com.example.pt_assistant.CreateNotesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.CreateNotesActivity" />
        </activity>
        <activity
            android:name="com.example.pt_assistant.AssessmentNotesActivity"
            android:label="@string/title_activity_assessment_notes"
            android:parentActivityName="com.example.pt_assistant.CreateNotesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.CreateNotesActivity" />
        </activity>
        <activity
            android:name="com.example.pt_assistant.PlanNotesActivity"
            android:label="@string/title_activity_plan_notes"
            android:parentActivityName="com.example.pt_assistant.CreateNotesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pt_assistant.CreateNotesActivity" />
        </activity>
        <activity
            android:name="com.example.pt_assistant.TreatmentPlanActivity"
            android:label="@string/title_activity_treatment_plan" >
        </activity>
    </application>

</manifest>
